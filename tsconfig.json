{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"strict": true,
		"declaration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declarationMap": true,
		"outDir": "lib",
		"useUnknownInCatchVariables": false,
		"isolatedModules": true
	},
	"include": [
		"src/**/**.ts",
		".eslintrc.js",
	],
}
