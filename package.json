{
	"name": "@smartthings/plugin-cli-edge",
	"version": "1.0.1",
	"description": "Edge-related SmartThings CLI commands",
	"author": "SmartThings, Inc.",
	"homepage": "https://github.com/SmartThingsCommunity/smartthings-cli",
	"bugs": "https://github.com/SmartThingsCommunity/smartthings-cli/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/SmartThingsCommunity/edge-cli-plugin"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "Apache-2.0",
	"engines": {
		"node": ">=12.0.0"
	},
	"files": [
		"dist/**/*"
	],
	"keywords": [
		"oclif-plugin"
	],
	"oclif": {
		"commands": "./src/commands",
		"bin": "smartthings",
		"devPlugins": [
			"@oclif/plugin-help"
		]
	},
	"dependencies": {
		"@oclif/command": "^1.8.0",
		"@oclif/config": "^1.17.0",
		"@oclif/errors": "^1.3.4",
		"@oclif/plugin-help": "^3.2.2",
		"@smartthings/cli-lib": "0.0.0-pre.26",
		"@smartthings/core-sdk": "^1.8.0",
		"axios": "^0.21.1",
		"cli-ux": "^5.5.1",
		"form-data": "^3.0.1",
		"inquirer": "^7.3.3",
		"js-yaml": "^3.14.1",
		"jszip": "^3.6.0",
		"picomatch": "^2.3.0",
		"tslib": "^2.3.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@oclif/dev-cli": "^1.26.0",
		"@semantic-release/git": "^9.0.0",
		"@smartthings/cli-testlib": "0.0.0-pre.25",
		"@types/cli-table": "^0.3.0",
		"@types/inquirer": "^7.3.0",
		"@types/jest": "^27.0.1",
		"@types/js-yaml": "^3.12.6",
		"@types/node": "^12.20.15",
		"@types/picomatch": "^2.2.4",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.28.3",
		"@typescript-eslint/parser": "^4.28.3",
		"eslint": "^7.28.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jest": "^24.4.0",
		"jest": "^27.0.6",
		"semantic-release": "^17.4.4",
		"strip-ansi": "^6.0.0",
		"ts-jest": "^27.0.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.3.5"
	},
	"scripts": {
		"format": "eslint --ext .ts src test .eslintrc.js --ignore-pattern '!.eslintrc.js' --fix",
		"lint": "eslint --ext .ts src test .eslintrc.js --ignore-pattern '!.eslintrc.js'",
		"test": "jest",
		"test-coverage": "jest --coverage",
		"clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"readme": "oclif-dev readme",
		"build": "npm run clean && npm run compile && npm run readme"
	}
}
